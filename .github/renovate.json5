{ 
   "$schema": "https://docs.renovatebot.com/renovate-schema.json", 
   "regexManagers": [
    {
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "argoproj/argo-helm",   
      "fileMatch": [
        "argocd-config/base/.*\\.yaml"
      ],
      "matchStrings": [
        "chartVersion:\\s+(?<currentValue>.*)" 
      ],                                                                                                                                                
      
    },
  ]
}
