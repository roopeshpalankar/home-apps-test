{ 
   "$schema": "https://docs.renovatebot.com/renovate-schema.json",
   "extends": [
    "config:base",

    // https://docs.renovatebot.com/presets-default/
    ":timezone(Asia/Tokyo)",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",

    // https://github.com/aquaproj/aqua-renovate-config
    "github>aquaproj/aqua-renovate-config#1.13.0",
   ],
   "argocd": 
    {
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "argoproj/argo-helm",   
      "fileMatch": [
        "argocd-config/base/.*\\.yaml"
      ],
      "matchStrings": [
        "chartVersion:\\s+(?<currentValue>.*)" 
      ],                                                                                                                                                
      
    },
}
